<div class="jumbotron">
    <img src="https://i.pinimg.com/originals/b9/3f/3b/b93f3bedfb3e3eb97da7ba81c4c3f35e.gif">
    <h1 class="title-text">EAT-DA-BURGER</h1>
    <h2 class="subtitle">Enter the name of a burger you'd like to try!</h2>

    <form id="add-burger" action="/burgers" class="create-form" method="POST">
        <div class="form-box">
            <input type="text" id="enter-burger" name="burger_name" class="form-control-lg">
            <button type="submit" class="btn btn-outline-light" id="send-burger">Add a burger!</button>
        </div>
    </form>

</div>

<div class="container">
    <div class="row">
        <div class="col-6" id="burgers-to-eat">
            <h2 class="text-center">BURGERS:</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="list-box">
                <form action="/burger/{{this.id}}?_method=PUT" method="POST" class="update-button">
                <input type="hidden" class="burger_id" type="text" value={{this.id}}>
                <li class="list"><p>{{this.burger_name}}
                <button type="submit" class="btn" id="burger-ready"><i class="fas fa-teeth-open"></i></button></p></li>
                </form>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6" id="burgers-devoured">
            <h2 class="text-center">DEVOURED BURGERS:</h2>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list"><p>{{this.burger_name}}</p></li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>